[Linux]:
  [pre.flight]:
    [ffmpeg]:
      dependencies: !use[shovel.systools.pkgconfig]
      download[shovel.download.http]:
        link: http://ffmpeg.mplayerhq.hu/releases/ffmpeg-0.5.tar.bz2
